<div class="columns">
  <div class="column col-12">
    <h1>Hello</h1>
  </div>

  <div class="column col-12">
    <%= form_for @payload do |f| %>
      <%= f.select :app_id, App.all.collect{ |u| [u.name, u.id] }, prompt: 'Select'%>
      <%= f.select :request_method_id, RequestMethod.all.collect{ |u| [u.name, u.id] }, prompt: 'Select'%>
      <%= f.select :request_environment_id, RequestEnvironment.all.collect{ |u| [u.name, u.id] }, prompt: 'Select'%>

      <div class="columns">
        <div class="column col-4">
          <div class="form-group">
            <%= f.label :name, class: 'form-label' %>
            <%= f.text_field :name, class: 'form-input' %>
          </div>
        </div>

        <div class="column col-4">
          <div class="form-group">
            <%= f.label :description, class: 'form-label' %>
            <%= f.text_field :description, class: 'form-input' %>
          </div>
        </div>

        <div class="column col-8">
          <div class="form-group">
            <%= f.label :request_url, class: 'form-label' %>
            <%= f.text_field :request_url, class: 'form-input' %>
          </div>
        </div>
      </div>

      <div class="column col-8">
        <h4>Headers</h4>

        <div class="add-request-headers">
          <div class="columns">
            <div class="column col-5">Key</div>
            <div class="column col-5">Value</div>
          </div>
          <%= link_to_add_fields "Add Header", f, :request_headers %>
        </div>
      </div>

      <div class="column col-8">
        <h4>Body</h4>

        <div class="add-request-headers">
          <div class="columns">
            <div class="column col-5">Key</div>
            <div class="column col-5">Value</div>
          </div>
          <%= link_to_add_fields "Add Body", f, :request_bodies %>
        </div>
      </div>


      <%= f.submit %>
    <% end %>
  </div>
</div>
